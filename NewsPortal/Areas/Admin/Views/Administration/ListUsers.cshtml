@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "ListUsers";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <a asp-action="CreateUser" asp-controller="Administration" class="btn btn-primary">Create User</a>
        </div>
    </div>
    <div class="row mt-5">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="card mb-3" style="background-color:white">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.UserName</h5>
                        </div>
                        <div class="card-footer d-flex justify-content-around ">
                            <a asp-action="ManageUserRoles" asp-controller="Administration" asp-route-userId="@item.Id" class="btn btn-info">Roles </a>
                            <form asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@item.Id" method="post">
                                <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-secondary">Edit </a>
                                <button type="submit" class="btn btn-danger">Delete </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-sm-10 text-center text-danger">
                Has No Users
            </div>
        }
    </div>
</div>

