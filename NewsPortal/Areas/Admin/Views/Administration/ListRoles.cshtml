@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
             <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary" style="width:100%">Create Role</a>
        </div>
    </div>
    <div class="row mt-5">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="card mb-3" style="background-color:white">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Name</h5>
                        </div>
                        <div class="card-footer d-flex justify-content-center align-items-center ">
                            <form asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@item.Id" method="post">
                                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-secondary">Edit </a>
                                <button asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-danger ml-1">Delete </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-sm-10 text-center text-danger">
                Has No Roles
            </div>
        }
    </div>
</div>

